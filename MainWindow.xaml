<Window x:Class="WiFiConnecter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WiFi Connecter" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header Section -->
        <StackPanel Grid.Row="0" Margin="10" Background="#f0f0f0" Orientation="Vertical">
            <TextBlock Text="WiFi Connecter" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,10,0,20"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="SSID (WiFi Name):" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Column="1" x:Name="SsidTextBox" Margin="5" Padding="5" Height="30"/>
                
                <TextBlock Grid.Column="2" Text="Password:" VerticalAlignment="Center" Margin="5"/>
                <PasswordBox Grid.Column="3" x:Name="PasswordBox" Margin="5" Padding="5" Height="30"/>
                
                <Button Grid.Column="4" x:Name="RefreshButton" Content="Refresh Networks" 
                        Click="RefreshButton_Click" Margin="5" Padding="10,5" Background="#4CAF50" 
                        Foreground="White" BorderBrush="#45a049"/>
            </Grid>
        </StackPanel>
        
        <!-- WiFi Networks List -->
        <ListView Grid.Row="1" x:Name="WiFiListView" Margin="10" 
                  SelectionMode="Single" SelectionChanged="WiFiListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Ssid}" Header="Network Name (SSID)" Width="300"/>
                    <GridViewColumn DisplayMemberBinding="{Binding SignalStrength}" Header="Signal Strength (%)" Width="150"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Security}" Header="Security Type" Width="150"/>
                    <GridViewColumn DisplayMemberBinding="{Binding IsConnected}" Header="Connected" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
        
        <!-- Status and Connect Section -->
        <StackPanel Grid.Row="2" Margin="10" Orientation="Vertical">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" x:Name="StatusTextBlock" Text="Enter WiFi network name (SSID) or select from list." 
                           VerticalAlignment="Center" Margin="5"/>
                
                <Button Grid.Column="1" x:Name="ConnectButton" Content="Connect to WiFi Network" 
                        Click="ConnectButton_Click" Padding="15,8" Background="#2196F3" 
                        Foreground="White" BorderBrush="#1976D2" IsEnabled="False"/>
            </Grid>
            
            <ProgressBar x:Name="ConnectionProgressBar" Margin="5" Height="20" 
                         Visibility="Collapsed" IsIndeterminate="True"/>
        </StackPanel>
    </Grid>
</Window>
